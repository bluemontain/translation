{
    "name": "bluemountainteam/translation",
    "version": "dev",
    "minimum-stability": "dev",
    "description": "Translations tools for Laravel applications",
    "license": "MIT",
    "authors": [
        {
            "name": "Damien Louvard",
            "email": "contact@damien-louvard.fr"
        },
        {
            "name": "Alan Legroux",
            "email": "alan.legroux@gmail.com"
        }
    ],
    "require": {
        "illuminate/database": "5.*",
        "illuminate/support": "5.*",
        "stichoza/google-translate-php": "~3.2.7",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "orchestra/testbench": "3.4.x",
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "~4|~5"
    },
    "archive": {
        "exclude": ["/tests"]
    },
    "autoload": {
        "psr-4": {
            "BlueMountainTeam\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlueMountainTeam\\Translation\\Tests\\": "tests/"
        }
    }
}